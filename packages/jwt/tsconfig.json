{
  "extends": "@repo/typescript-config/base.json",
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": "./src" ,
    "outDir": "./dist",
    "esModuleInterop": true ,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true ,
    "skipLibCheck": true
  }
}